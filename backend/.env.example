################################################################################
# DATA MANAGEMENT POLICIES
################################################################################

# Number of days to retain historical data (before archiving)
DATA_RETENTION_DAYS=3

# Number of backup snapshots to keep
BACKUP_RETENTION_COUNT=2

# Number of days between automatic backups
BACKUP_INTERVAL_DAYS=14

# Number of previous sessions to look back
SESSION_LOOKBACK_COUNT=3

# Length of a session in years
SESSION_LENGTH_YEARS=2

################################################################################
# FILE STORAGE
################################################################################

# Directory where downloaded data files are stored
# Default: backend/data
NJLEG_DATA_DIR=backend/data

